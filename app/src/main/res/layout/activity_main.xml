<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.avbor.assignment2.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <fragment
        android:id="@+id/fragment"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="374dp"
        android:layout_height="285dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.333"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="21dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Your coordinates:"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btnGet"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnGet" />

        <TextView
            android:id="@+id/textLongt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_weight="1"
            android:text="Longitude"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="301dp" />

        <TextView
            android:id="@+id/textLat"
            android:layout_width="57dp"
            android:layout_height="17dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Latitude"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="301dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="109dp"
        android:layout_height="104dp"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginStart="16dp"
        app:layout_constraintRight_toLeftOf="@+id/linearLayout4"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Today:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="City"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/textCityTemp"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:text="Temperature"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="434dp" />

        <TextView
            android:id="@+id/textCityCond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Condition"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="457dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="89dp"
        android:layout_height="109dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/linearLayout3"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteY="361dp"
        tools:layout_editor_absoluteX="287dp"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/textNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.37"
            android:text="Tommorow"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="365dp" />

        <TextView
            android:id="@+id/textNextTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.39"
            android:text="Temperature"
            tools:layout_editor_absoluteX="181dp"
            tools:layout_editor_absoluteY="412dp" />

        <TextView
            android:id="@+id/textNextCond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.31"
            android:text="Condition"
            tools:layout_editor_absoluteX="242dp"
            tools:layout_editor_absoluteY="514dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="92dp"
        android:layout_height="115dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="36dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintRight_toLeftOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.37"
            android:text="Tommorow:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.37"
            android:text="Temp:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:text="Condition:"
            android:textStyle="bold" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
